\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{dag-notes}[2023/10/27 v1.0 Custom Style for Lurie's DAG Notes]

%----------------------------------------------------------------------------------------
%	BASIC PACKAGES & GEOMETRY
%----------------------------------------------------------------------------------------
\RequirePackage[utf8]{inputenc}
\RequirePackage[T1]{fontenc}
\RequirePackage{lmodern} % 更加清晰的字体
\RequirePackage{geometry}
\geometry{left=2.5cm, right=2.5cm, top=3cm, bottom=3cm}
\RequirePackage{fancyhdr} % 页眉页脚

%----------------------------------------------------------------------------------------
%	MATH PACKAGES
%----------------------------------------------------------------------------------------
\RequirePackage{amsmath, amssymb, amsthm, amsfonts}
\RequirePackage{mathtools}
\RequirePackage{mathrsfs} % 花体字 \mathscr
\RequirePackage{tikz-cd}  % 交换图表，DAG笔记必备

%----------------------------------------------------------------------------------------
%	HYPERLINKS (Usually loaded last)
%----------------------------------------------------------------------------------------
\RequirePackage[hidelinks]{hyperref}

%----------------------------------------------------------------------------------------
%	THEOREM ENVIRONMENTS
%----------------------------------------------------------------------------------------
\theoremstyle{definition}
\newtheorem{definition}{Definition}[section]
\newtheorem{example}[definition]{Example}
\newtheorem{remark}[definition]{Remark}
\newtheorem{construction}[definition]{Construction}
\newtheorem{convention}[definition]{Convention} % 增加 Convention 环境
\newtheorem{theorem}[definition]{Theorem}
\newtheorem{lemma}[definition]{Lemma}
\newtheorem{proposition}[definition]{Proposition}
\newtheorem{corollary}[definition]{Corollary}
\newtheorem{conjecture}[definition]{Conjecture}

